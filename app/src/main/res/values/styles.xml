<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="EnterpriseInfoTextStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FilterStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/gray_black_select</item>
    </style>

    <style name="TabItemBase">
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TabItem" parent="TabItemBase">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/blue_gray_select</item>
    </style>

    <style name="TitleTabBase" parent="TabItemBase">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleLeftTabItem" parent="TitleTabBase">
        <item name="android:textColor">@color/blue_white_select</item>
        <item name="android:background">@drawable/bg_white_blue_select_left</item>
    </style>

    <style name="TitleRightTabItem" parent="TitleTabBase">
        <item name="android:textColor">@color/blue_white_select</item>
        <item name="android:background">@drawable/bg_white_blue_select_right</item>
    </style>
    <!--大的按钮（适用于登录或注册）-->
    <style name="big_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:layout_marginRight">13dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="small_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="text_small_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="text_small_button2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
    <!--用来填补空白的控件-->
    <style name="weight_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--自定义灰色线条-->
    <style name="divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/colorGray</item>
    </style>
    <!--自定义灰色亮线条-->
    <style name="divider_line_light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/colorLightDivider</item>
    </style>

    <style name="vertical_divider_line_light">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorLightDivider</item>
    </style>
    <!--  PopWindow的动画 -->
    <style name="PopWindow_x_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_x_anim</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/pophidden_x_anim</item>
        <!-- 指定消失的动画xml -->
    </style>
    <!--  PopWindow的动画 -->
    <style name="PopWindow_y_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_y_anim</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/pophidden_y_anim</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="TestSelectLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
